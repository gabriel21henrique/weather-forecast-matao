{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "indent": [
      "warn",
      2
    ],
    "linebreak-style": [
      "warn",
      "windows"
    ],
    "quotes": [
      "warn",
      "single"
    ],
    "semi": [
      "warn",
      "always"
    ],
    "no-multiple-empty-lines": [
      1,
      {
        "max": 1,
        "maxBOF": 0,
        "maxEOF": 0
      }
    ],
    "eol-last": [
      1
    ],
    "no-unused-vars": "warn",
    "comma-dangle": [
      "warn",
      "never"
    ]
  }
}